<?xml version="1.0" encoding="UTF-8"?>
<!--  CVS Version '$Id$' -->
<project basedir=".." default="compile" name="jnetlib">
    <target name="init">
      <property name="libdir" value="${basedir}/lib"/>
      <property name="sourcedir" value="${basedir}/src"/>
      <property name="bindir" value="${basedir}/bin"/>
      <property name="gen-libdir" value="${basedir}/gen-libdir"/>
      <property name="buildir" value="${basedir}/build"/>
      <property name="compiler.flag.debug" value="true"/>
      <property name="compiler.flag.deprecated" value="true"/>
      <property name="compiler.flag.optimize" value="true"/>
      <mkdir dir="${libdir}"/>
    </target>
    <target depends="clean,compile" name="recompile"/>
    <target depends="init" name="clean">
        <delete dir="${bindir}"/>
        <delete dir="${gen-libdir}"/>
    </target>
    <target depends="init" name="compile">
        <echo> Compiling Classes </echo>
        <mkdir dir="${bindir}"/>
        <javac debug="${compiler.flag.debug}" deprecation="${compiler.flag.deprecated}"
            destdir="${bindir}" optimize="${compiler.flag.optimize}" srcdir="${sourcedir}">
            <classpath>
                <fileset dir="${libdir}"/>
            </classpath>
        </javac>
        <echo> Making Jar </echo>
        <mkdir dir="${gen-libdir}"/>
        <jar basedir="${bindir}" jarfile="${gen-libdir}/jnetlib.jar"/>
    </target>
</project>
